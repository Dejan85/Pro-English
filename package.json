{
  "name": "proenglish",
  "version": "1.0.0",
  "engines": {
    "node": "11.10.1"
  },
  "description": "Pro english is MERN app for Pro English school",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "server": "nodemon app.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xypnotica/Pro-English.git"
  },
  "author": "Dejan Markovic, Devxad",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xypnotica/Pro-English/issues"
  },
  "homepage": "https://github.com/xypnotica/Pro-English#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-validator": "^6.1.0",
    "formidable": "^1.2.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mongoose": "^5.6.1",
    "morgan": "^1.9.1",
    "nodemailer": "^6.2.1",
    "uuid": "^3.3.2"
  }
}
